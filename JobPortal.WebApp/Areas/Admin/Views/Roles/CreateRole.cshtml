@model JobPortal.Data.ViewModel.CreateRoleViewModel

@{
    ViewData["Title"] = "Thêm mới role";
}

<div class="content-wrapper">

    <div class="row">

        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Role</h4>
                    <div class="col-md-4">
                        <form asp-action="CreateRole" method="post" id="form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="RoleName" class="control-label"></label>
                                <input asp-for="RoleName" class="form-control" />
                                <span asp-validation-for="RoleName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <input asp-for="Description" class="form-control" />
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                            <br />
                            <div class="form-group">
                                <input style="background-color: forestgreen" type="submit" value="Create" class="btn btn-primary" onclick="onConfirm()" />
                            </div>
                        </form>
                    </div>
                    <br />
                    <div>
                        <a style="background-color: gray" class="btn btn-primary" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function onConfirm() {
            Swal.fire({
                title: 'Thêm mới quyền?',
                text: "Bạn có chắc sẽ thêm quyền này?",
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Xác nhận!'
            }).then((result) => {
                if (result.isConfirmed) {
                    $("#form").submit();
                    Swal.fire(
                        'Thêm thành công!',
                        '',
                        'success'
                    )
                }
            })
        }
    </script>
}